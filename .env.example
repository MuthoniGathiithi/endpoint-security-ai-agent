# Backend Configuration
DEBUG=false
HOST=0.0.0.0
PORT=8000
WORKERS=1
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite:///./data/edr.db

# Security
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-key
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# AI/ML (Optional - for ChatGPT-style AI analyst)
AI_MODEL=gpt-4
OPENAI_API_KEY=your-openai-api-key-here

# osquery
OSQUERY_SOCKET=/var/osquery/osquery.sock
OSQUERY_CONFIG=./config/osquery.conf

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NODE_ENV=development
